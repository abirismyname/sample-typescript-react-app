   {
     "compilerOptions": {
       "target": "es6",
       "module": "commonjs",
       "lib": ["es2017", "es2018", "es2019", "es2020"],
       "declaration": true,
       "declarationMap": true,
       "sourceMap": true,
       "outDir": "./dist",
       "strict": true,
       "esModuleInterop": true,
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "forceConsistentCasingInFileNames": true,
       "moduleResolution": "node",
       "resolveJsonModule": true,
       "baseUrl": "./src",
       "paths": {
         "*": ["node_modules/*"]
       }
     },
     "include": ["./src/**/*.ts"]
   }
